/*
 * ESP32 DevKit C Temperature Monitor Device Tree Overlay
 *
 * Hardware Configuration:
 * - DS18B20 temperature sensor on GPIO 25 with
 * - 4.7kΩ pull-up resistor
 * - LED on GPIO 26 with 220Ω pull-down resistor
 */

/ {
    w1: w1 {
        compatible = "zephyr,w1-gpio";
        gpios = <&gpio0 25 GPIO_ACTIVE_HIGH>;
        status = "okay";

        ds18b20: ds18b20 {
            compatible = "maxim,ds18b20";
            resolution = <12>;
        };
    };

    leds {
        compatible = "gpio-leds";
        red_led: red_led {
            gpios = <&gpio0 26 GPIO_ACTIVE_HIGH>;
        };
    };
};
