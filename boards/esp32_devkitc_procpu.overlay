/*
 * ESP32 DevKit C Temperature Monitor Device Tree Overlay
 *
 * Hardware Configuration:
 * - DS18B20 temperature sensor on GPIO 25
 * - 4.7kÎ© pull-up resistor between data and VCC
 */

/ {
    w1: w1 {
        compatible = "zephyr,w1-gpio";
        gpios = <&gpio0 25 GPIO_ACTIVE_HIGH>;
        status = "okay";

        ds18b20: ds18b20 {
            compatible = "maxim,ds18b20";
            resolution = <12>;
        };
    };
};
